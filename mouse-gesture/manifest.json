{
  "manifest_version": 3,
  "name": "鼠标右键手势",
  "version": "1.0.0",
  "description": "按住鼠标右键并滑动，通过手势控制标签页和滚动。",
  "permissions": [
    "tabs",
    "windows",
    "storage",
    "sessions"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}